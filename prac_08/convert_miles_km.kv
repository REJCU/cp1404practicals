BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            on_text: app.handle_calculation(self.text)
            font_size: 64
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_number, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_number, -1)
    Label:
        id: output_number
        color: (1,1,0,1)
        text: app.output_of_km
        font_size: 64



